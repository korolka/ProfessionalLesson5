<Window x:Class="ProfessionalEx4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfessionalEx4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="General">
                <StackPanel>
                    <TextBox x:Name="textBox" Width="200" Height="30"/>
                    <!-- Добавьте другие элементы управления для общих настроек -->
                </StackPanel>
            </TabItem>
            <TabItem Header="Appearance">
                <StackPanel>
                    <!-- Добавьте элементы управления для настроек внешнего вида -->
                </StackPanel>
            </TabItem>
        </TabControl>

        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="75" Click="SaveButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,90,10" Width="75" Click="CancelButton_Click"/>
    </Grid>
</Window>
